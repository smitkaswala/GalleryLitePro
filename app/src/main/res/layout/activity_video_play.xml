<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.EditingActivity"
    android:background="@drawable/bg9">

    <com.example.gallerylitepro.Classes.CustomViewPager
        android:id="@+id/mImagePager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </com.example.gallerylitepro.Classes.CustomViewPager>

    <LinearLayout
        android:id="@+id/first_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/bg9">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/image_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingTop="3dp"
            android:textStyle="bold"
            android:fontFamily="@font/vidaloka"
            android:textColor="@color/white"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg9">

        <ImageView
            android:id="@+id/mDelete"
            android:layout_weight="1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_delete"/>

        <ImageView
            android:id="@+id/favourite_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:padding="9dp"
            android:src="@drawable/ic_like"
            android:background="@drawable/ic_circle_view"/>


        <ImageView
            android:id="@+id/mShare"
            android:layout_weight="1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:padding="9dp"
            android:src="@drawable/ic_share"/>

    </LinearLayout>

</RelativeLayout>